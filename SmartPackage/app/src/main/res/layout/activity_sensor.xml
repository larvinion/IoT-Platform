<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.areumelec.smartpackage.SensorDemo"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperature_title"
                android:textAlignment="center"
                android:layout_weight="1" />

            <TextView
                android:text="Flame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flame_title"
                android:textAlignment="center"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperature_value"
                android:textAlignment="center"
                android:textSize="50dp"
                android:layout_weight="1" />

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flame_value"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/door_title"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="Door" />

            <TextView
                android:text="Gas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gas_title"
                android:textAlignment="center"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/door_value"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_weight="1" />

            <TextView
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gas_value"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>